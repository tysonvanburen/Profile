source: "http://rubygems.org"

gem 'rails', '4.1.1'

#Use SCSS for stylesheets
gem 'sass-rails', '~> 4.0.3'

# Use postgresql as the database for Active Record
gem 'pg'

# Use Uglifier as compressor for JavaScript Assets
gem 'uglifier', '>= 1.3.0'

# Use CoffeScript for .js.coffee assets and views
gem 'coffee-rails', '~> 4.0.0'

#use jquery as the JavaScript library
gem 'jquery-rails'

# Turbolinks makes following links in your web appication faster.
gem 'turbolinks'

# Build JSON APIs with ease.
gem 'jbuilder', '~> 2.0'

# Bundle exec rake doc:rails generates the API under doc/api
gem 'sdoc', '~> 0.4.0',          group: :doc

# Spring speeds up development by keeping your application running in the background.
gem 'spring',                    group: :development

#
gem 'rmagick', :require => 'RMagick'

# Carrierwave provides a simple and extremely flexible way to upload files from Ruby applications.
gem 'carrierwave', '~> 0.10.0'

# Bootstrap is a bitch'n way to style your page
gem 'bootstrap-sass'
